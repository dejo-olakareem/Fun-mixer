<h2>Sign up</h2>


<div class="login-clean">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <h2 class="sr-only">Sign up Form</h2>
        <div class="form-group">
            <%= f.email_field :email, autofocus: true, class:"form-control",placeholder: "Email" %>
        </div>
        <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off",class:"form-control", placeholder: "password" %>
        </div>
        <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control", placeholder: "password" %>
        </div>

        <div class="form-group">
            <div class="checkbox">
            </div>
        </div>
        <div class="form-group">
            <%= f.submit "Sign up", class:"btn btn-info btn-block",style: "background:transparent"%>
        </div><a href="/users/sign_in" class="already">You already have an account? Login here.</a>
        <% end %>
</div>



